# WE Accounting & Tax AI - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
# Get these from Firebase Console > Project Settings > General
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef

# Firebase Cloud Messaging (for Push Notifications)
# Generate from Firebase Console > Project Settings > Cloud Messaging > Web Push certificates
FIREBASE_VAPID_KEY=your_vapid_key

# ============================================================================
# GOOGLE CLOUD / GEMINI AI
# ============================================================================
# Get from Google AI Studio: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key

# Google Cloud Project (for deployment)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_REGION=asia-southeast1

# ============================================================================
# E-COMMERCE PLATFORM APIs
# ============================================================================

# Shopee Partner API
# Register at: https://open.shopee.com
SHOPEE_PARTNER_ID=your_partner_id
SHOPEE_PARTNER_KEY=your_partner_key
SHOPEE_API_URL=https://partner.shopeemobile.com

# Lazada Open Platform
# Register at: https://open.lazada.com
LAZADA_APP_KEY=your_app_key
LAZADA_APP_SECRET=your_app_secret
LAZADA_API_URL=https://api.lazada.co.th

# TikTok Shop
# Register at: https://partner.tiktokshop.com
TIKTOK_APP_KEY=your_app_key
TIKTOK_APP_SECRET=your_app_secret
TIKTOK_API_URL=https://open-api.tiktokglobalshop.com

# Grab (GrabFood/GrabMart)
# Register at: https://developer.grab.com
GRAB_CLIENT_ID=your_client_id
GRAB_CLIENT_SECRET=your_client_secret
GRAB_API_URL=https://partner-api.grab.com

# LINE MAN Wongnai
# Register at: https://developers.line.biz
LINEMAN_API_KEY=your_api_key
LINEMAN_SECRET_KEY=your_secret_key
LINEMAN_API_URL=https://api.lineman.me

# ============================================================================
# GOOGLE APIS (Drive, Sheets)
# ============================================================================
# Get from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================
# Base URL for webhook endpoints (used for E-commerce callbacks)
WEBHOOK_BASE_URL=https://your-api-domain.com

# Secret keys for webhook signature verification
WEBHOOK_SECRET_SHOPEE=your_shopee_webhook_secret
WEBHOOK_SECRET_LAZADA=your_lazada_webhook_secret
WEBHOOK_SECRET_TIKTOK=your_tiktok_webhook_secret

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Environment: development | staging | production
NODE_ENV=development

# Application URL
VITE_APP_URL=http://localhost:5173

# API URL (if separate backend)
VITE_API_URL=http://localhost:3001

# Enable debug logging
DEBUG=false

# ============================================================================
# THAILAND REVENUE DEPARTMENT (e-Filing)
# ============================================================================
# RD e-Filing API (Production requires registration)
RD_EFILING_URL=https://efiling.rd.go.th
RD_COMPANY_TAX_ID=your_tax_id
RD_API_KEY=your_rd_api_key

# ============================================================================
# EMAIL / SMTP (for notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=WE Accounting <noreply@weaccounting.com>

# ============================================================================
# BANK APIs (optional - for bank statement import)
# ============================================================================
# SCB Connect
SCB_API_KEY=your_scb_api_key
SCB_API_SECRET=your_scb_api_secret

# KBank API
KBANK_CONSUMER_ID=your_consumer_id
KBANK_CONSUMER_SECRET=your_consumer_secret
